FLASK_ENV=development
DATABASE_URL=postgresql://postgres:root@localhost:5432/minibank_db
JWT_SECRET_KEY=supersecretkey
FLASK_APP=main.py

# Email Configuration (Optional - emails will be skipped if not configured)
# For Gmail: Use App Password (not regular password) - https://support.google.com/accounts/answer/185833
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
# Alternative: Use port 465 with SSL (if port 587/TLS is blocked)
# SMTP_PORT=465
# SMTP_USE_SSL=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
# If using port 465, set SMTP_USE_SSL=true instead of SMTP_USE_TLS
# SMTP_USE_SSL=true
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Mahadev Welfare Society
FRONTEND_URL=http://localhost:3000

# Troubleshooting email issues on Render:
# 1. If "Network is unreachable" error: Try using SSL (port 465) instead of TLS (port 587)
#    Set: SMTP_PORT=465 and SMTP_USE_SSL=true
# 2. Check if environment variables are set correctly on Render dashboard
# 3. Consider using a cloud email service (SendGrid, Mailgun, Resend) for better reliability

# Razorpay Payment Gateway Configuration (Test Mode)
# Get your test API keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_test_secret_key
RAZORPAY_TEST_MODE=true
